@page
@model Aeropuertos.Infraestructura.API.Pages.AeropuertoPage.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="container">
   <div class="row">
      <div class="col-md-4">
         <h2 class="h2">Crear nuevo aeropuerto</h2>
         <form method="post">
            <div class="form-group">
               <label class="control-label">Nombre</label>
               <input asp-for="Aeropuerto!.nombre" class="form-control"/>
            </div>
            <br/>
            <div class="form-group">
               <label class="control-label">Direccion</label>
               <input asp-for="Aeropuerto!.direccion" class="form-control"/>
            </div>
            <br/>
            <div class="form-group">
               <label class="control-label">Posicion Geografica</label>
               <input asp-for="Aeropuerto!.posicionGeografica" class="form-control"/>
            </div>
            <br/>
            <div class="form-group">
               <input type="submit" value="Enviar" class="btn btn-success"/>
            </div>
         </form>
      </div>
   </div>
</div>