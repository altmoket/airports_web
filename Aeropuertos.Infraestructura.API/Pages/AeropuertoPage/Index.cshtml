@page
@model Aeropuertos.Infraestructura.API.Pages.AeropuertoPage.IndexModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="container">
    <h2 class="h2">Aeropuertos</h2>
    <form method="post">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Direccion</th>
                    <th>Posicion Geografica</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var aeropuerto in Model.Aeropuertos)
                {
                    <tr>
                        <td>@aeropuerto.nombre</td>
                        <td>@aeropuerto.direccion</td>
                        <td>@aeropuerto.posicionGeografica</td>
                        <td>
                            <a asp-page="../AeropuertoPage/Edit" asp-route-id="@aeropuerto.aeropuertoId" class="btn btn-success">Editar</a>
                            <button type="submit" asp-page-handler="delete" asp-route-id="@aeropuerto.aeropuertoId" class="btn btn-danger">Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-page="../AeropuertoPage/Create" class="btn btn-primary">Crear Aeropuerto</a>
    </form>

</div>