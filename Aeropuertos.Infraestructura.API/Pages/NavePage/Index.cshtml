@page
@model Aeropuertos.Infraestructura.API.Pages.NavePage.IndexModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="container">
    <h2 class="h2">Naves</h2>
    <form method="post">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>Clasificacion</th>
                    <th>Capacidad</th>
                    <th>Numero de Tripulantes</th>
                    <th>Total Plazas</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var nave in Model.Naves)
                {
                    <tr>
                        <td>@nave.clasificacion</td>
                        <td>@nave.capacidad</td>
                        <td>@nave.numeroTripulantes</td>
                        <td>@nave.totalPlazasParaPasajeros</td>
                        <td>
                            <a asp-page="../NavePage/Edit" asp-route-id="@nave.numeroMatricula" class="btn btn-success">Editar</a>
                            <button type="submit" asp-page-handler="delete" asp-route-id="@nave.numeroMatricula" class="btn btn-danger">Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-page="../NavePage/Create" class="btn btn-primary">Crear Nave</a>
    </form>

</div>